<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="mark.workspace.heberate_toturial.ProductLine" table="productlines" catalog="classicmodels">
		<id name="productLine" type="java.lang.String">
			<column name="productLine" />
		</id>

		<property name="textDescription" type="java.lang.String">
			<column name="textDescription"/>
		</property>
		<property name="htmlDescription" type="java.lang.String">
			<column name="htmlDescription"/>
		</property>
		<property name="image" type="java.sql.Blob">
			<column name="image"/>
		</property>
	</class>
</hibernate-mapping>