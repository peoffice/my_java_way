<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="mark.workspace.heberate_toturial.Employee" table="employees" catalog="classicmodels">
		<id name="employeeNumber" type="java.lang.Integer">
			<column name="employeeNumber" />
		</id>

		<property name="lastName" type="java.lang.String">
			<column name="lastName"/>
		</property>
		<property name="firstName" type="java.lang.String">
			<column name="firstName"/>
		</property>
		<property name="extension" type="java.lang.String">
			<column name="extension"/>
		</property>
		<property name="email" type="java.lang.String">
			<column name="email"/>
		</property>
		<property name="officeCode" type="java.lang.String">
			<column name="officeCode"/>
		</property>
		<property name="reportsTo" type="java.lang.Integer">
			<column name="reportsTo"/>
		</property>
		<property name="jobTitle" type="java.lang.String">
			<column name="jobTitle"/>
		</property>
	</class>
</hibernate-mapping>